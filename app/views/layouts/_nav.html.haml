.navbar-fixed
  %nav{class: "orange lighten-1"}
    .nav-wrapper
      = link_to "NARUTter", root_path, class: "brand-logo"
      %ul#nav-mobile.right.hide-on-med-and-down
        - if user_signed_in?
          %li
            = link_to "Sign Out", "/users/sign_out", method: :delete
          %li
            = link_to "New Post", "/messages/new"
        - else
          %li
            = link_to "Sign Up", "/users/sign_up"
          %li
            = link_to "Log In", "/users/sign_in"
