.row{style: "padding-top: 50px;"}
  = form_for [@message], class: "col s12" do |f|
    .row
      .input-field.col.s12.m6
        = f.text_area :text, id: "new-text", class: "materialize-textarea", style: "overflow: scroll;"
        = f.label "New Text", for: "new-text", class: "active"
        = f.submit "Submit", class: "btn waves-effect waves-light"